<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Verge.Mobile.Controls.PaymentView">
      <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button Text="SEND" VerticalOptions="Center" Command="{Binding SendCmd}"></Button>
            <Button Text="RECEIVE" VerticalOptions="Center" Command="{Binding ReceiveCmd}"></Button> 
      </StackLayout>
</ContentView>